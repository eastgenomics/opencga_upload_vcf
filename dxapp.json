{
  "name": "opencga_upload_vcf_v1.0.0",
  "title": "opencga_upload_vcf_v1.0.0",
  "summary": "App to upload vcf files from DNAnexus to OpenCGA",
  "dxapi": "1.0.0",
  "properties": {
    "githubRelease": "v1.0.0"
  },
  "inputSpec": [
    {
      "name": "input_vcf_files",
      "label": "Input Vcf Files",
      "help": "",
      "class": "array:file",
      "patterns": [".vcf*"],
      "optional": false
    },
    {
      "name": "input_config_file",
      "label": "Input Config file",
      "help": "OpenCGA account and project/study details",
      "class": "file",
      "patterns": ["*"],
      "optional": false
    }
  ],
  "outputSpec": [
    {
      "name": "output_file",
      "label": "Output File",
      "help": "One or more vcf files to be uploaded by opencga",
      "class": "file",
      "patterns": ["*"]
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "timeoutPolicy": {
      "*": {
        "hours": 6
      }
    },
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0",
    "file": "src/code.sh"
  },
  "access": {
    "network": [
      "*"
    ],
    "project": "CONTRIBUTE"
  },
  "ignoreReuse": false,
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x4"
        }
      }
    }
  }
}
